<launch>
    <master auto="start" />
    <rosparam file="$(find robot_config)/globals/andy_demo.yaml" command="load" />

    <arg name="stage_sim" default="single_bot_obstacles" />

    <!--<include file="$(find ssr_stage)/launch/$(arg stage_sim).launch"/>-->

    <arg name="map_file"    default="stage_empty.yaml" />

    <node pkg="map_server" type="map_server" name="map_server" args="$(find ssr_stage)/maps/$(arg map_file)" respawn="false" >
        <param name="frame_id" value="/map" />
        <remap from="map" to="/map" />
    </node>

    <node pkg="multi_robot_path_planner" type="launch_nav.py" name="navigation" output="screen" />

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find ssr_launchpad)/single_robot.rviz" >
        <remap from="/move_base_simple/goal" to="/dumper/move_base_simple/goal" />
    </node>

    <node name="robot_driver" pkg="robot_drivers" type="robotdriver.py" />

	<arg name = "home" default="/home/ssr" />
	<node name="steamvr_interface_node" pkg="lighthouse_ros" type="steamvr_interface_node" launch-prefix="$(arg home)/.steam/ubuntu12_32/steam-runtime/run.sh" />
	<node pkg="tf2_ros" type="static_transform_publisher" name="static_tf_broadcaster_base" args="0 0 0 0 0 0.707 0.707 device01 base_link" />
	<node pkg="tf2_ros" type="static_transform_publisher" name="static_tf_broadcaster" args="0.0635 -0.0254 -0.1905 0 0 0 1 base_link base_footprint" />
        <node pkg="tf2_ros" type="static_transform_publisher" name="static_tf_broadcaster_lighthouse" args="3.63856 1.14935 0.81280 0.5 0.5 0.5 0.5 map lighthouse_01" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="static_tf_broadcaster_odom" args="0 0 0 0 0 0 1 map odom" />
</launch>
