<launch>
    <master auto="start" />
    <rosparam file="$(find robot_config)/globals/single_bot_stage_gmapping_fake_localization.yaml" command="load" />

    <arg name="stage_sim" default="single_bot_empty" />

    <include file="$(find ssr_stage)/launch/$(arg stage_sim).launch"/>

    <include file="$(find multi_robot_path_planner)/launch/gmapping.launch">
        <arg name="map_frame"   default="/map" />
        <arg name="map_topic"   default="/map" />
        <arg name="odom_frame"  default="/odom" />
        <arg name="scan_topic"  default="/dumper/base_scan" />
        <arg name="node_name"   default="slam_gmapping" />
    </include>

    <node pkg="multi_robot_path_planner" type="launch_nav.py" name="navigation" output="screen" />

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find autonomy_controller)/single_robot.rviz" >
        <remap from="/move_base_simple/goal" to="/dumper/move_base_simple/goal" />
    </node>
</launch>