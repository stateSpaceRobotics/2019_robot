resolution 0.02 # set the resolution of the underlying raytrace model in meters
interval_sim 100 # simulation timestep in milliseconds
#interval_real 100

# Include map (defines and loads mining map)
include "map.inc"

# Include obstacle models
include "obstacle.inc"

# Include robot models
include "transporter.inc"
include "dumper.inc"
include "digger.inc"

# Instantiate a team of robots
dumper( pose [1.89 0.3 0 0] name "dumper" color "green")
digger( pose [0.94 1.11 0 0] name "digger" color "blue")
transporter( pose [0.795 0.53 0 0] name "transporter" color "red")

# Load obstacles here
# Example:
obstacle_sm( pose [0.80 3.15 0 0] color "black")
obstacle_md( pose [1.49 3.94 0 0] color "black")
obstacle_md( pose [2.12 2.00 0 0] color "black")
